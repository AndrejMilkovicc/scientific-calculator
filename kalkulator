<body>
    <div class="calculator">
        <input type="text" class="display" id="display" readonly>
        
        <div class="buttons">
            <!-- First row -->
            <button class="clear" onclick="clearAll()">AC</button>
            <button class="clear" onclick="clearEntry()">CE</button>
            <button class="operator" onclick="appendToDisplay('/')">/</button>
            <button class="operator" onclick="appendToDisplay('*')">×</button>
            <button class="function" onclick="calculateFunction('sqrt')">√</button>

            <!-- Second row -->
            <button class="function" onclick="calculateFunction('sin')">sin</button>
            <button class="function" onclick="calculateFunction('cos')">cos</button>
            <button class="function" onclick="calculateFunction('tan')">tan</button>
            <button class="operator" onclick="appendToDisplay('-')">-</button>
            <button class="function" onclick="calculateFunction('pow2')">x²</button>

            <!-- Third row -->
            <button class="function" onclick="calculateFunction('asin')">asin</button>
            <button class="function" onclick="calculateFunction('acos')">acos</button>
            <button class="function" onclick="calculateFunction('atan')">atan</button>
            <button class="operator" onclick="appendToDisplay('+')">+</button>
            <button class="function" onclick="calculateFunction('pow3')">x³</button>

            <!-- Fourth row -->
            <button class="function" onclick="calculateFunction('ln')">ln</button>
            <button class="function" onclick="calculateFunction('log')">log</button>
            <button class="special" onclick="appendToDisplay('Math.PI')">π</button>
            <button class="special" onclick="appendToDisplay('Math.E')">e</button>
            <button class="function" onclick="calculateFunction('powxy')">x^y</button>

            <!-- Fifth row -->
            <button class="number" onclick="appendToDisplay('7')">7</button>
            <button class="number" onclick="appendToDisplay('8')">8</button>
            <button class="number" onclick="appendToDisplay('9')">9</button>
            <button class="special" onclick="appendToDisplay('(')">(</button>
            <button class="special" onclick="appendToDisplay(')')">)</button>

            <!-- Sixth row -->
            <button class="number" onclick="appendToDisplay('4')">4</button>
            <button class="number" onclick="appendToDisplay('5')">5</button>
            <button class="number" onclick="appendToDisplay('6')">6</button>
            <button class="function" onclick="calculateFunction('factorial')">n!</button>
            <button class="function" onclick="calculateFunction('inverse')">1/x</button>

            <!-- Seventh row -->
            <button class="number" onclick="appendToDisplay('1')">1</button>
            <button class="number" onclick="appendToDisplay('2')">2</button>
            <button class="number" onclick="appendToDisplay('3')">3</button>
            <button class="function" onclick="calculateFunction('abs')">|x|</button>
            <button class="operator" onclick="appendToDisplay('%')">%</button>

            <!-- Eighth row -->
            <button class="number" onclick="appendToDisplay('0')">0</button>
            <button class="special" onclick="appendToDisplay('.')">.</button>
            <button class="operator" onclick="toggleSign()">±</button>
            <button class="equals" onclick="calculate()">=</button>
        </div>
    </div>

    <script>
        let display = document.getElementById('display');
        let currentInput = '';
        let shouldResetDisplay = false;

        function appendToDisplay(value) {
            if (shouldResetDisplay) {
                currentInput = '';
                shouldResetDisplay = false;
            }
            
            if (value === 'Math.PI') {
                currentInput += Math.PI;
                display.value = currentInput;
            } else if (value === 'Math.E') {
                currentInput += Math.E;
                display.value = currentInput;
            } else {
                currentInput += value;
                display.value = currentInput;
            }
        }

        function clearAll() {
            currentInput = '';
            display.value = '';
            display.classList.remove('error');
        }

        function clearEntry() {
            currentInput = currentInput.slice(0, -1);
            display.value = currentInput;
        }

        function toggleSign() {
            if (currentInput) {
                if (currentInput.startsWith('-')) {
                    currentInput = currentInput.substring(1);
                } else {
                    currentInput = '-' + currentInput;
                }
                display.value = currentInput;
            }
        }

        function calculate() {
            try {
                if (!currentInput) return;
                
                // Replace × with *
                let expression = currentInput.replace(/×/g, '*');
                
                // Evaluate the expression
                let result = eval(expression);
                
                if (isNaN(result) || !isFinite(result)) {
                    throw new Error('Invalid calculation');
                }
                
                display.value = result;
                currentInput = result.toString();
                shouldResetDisplay = true;
                display.classList.remove('error');
                
            } catch (error) {
                display.value = 'Error';
                display.classList.add('error');
                currentInput = '';
                shouldResetDisplay = true;
            }
        }

        function calculateFunction(func) {
            try {
                if (!currentInput) return;
                
                let number = parseFloat(currentInput);
                let result;
                
                switch(func) {
                    case 'sin':
                        result = Math.sin(number);
                        break;
                    case 'cos':
                        result = Math.cos(number);
                        break;
                    case 'tan':
                        result = Math.tan(number);
                        break;
                    case 'asin':
                        result = Math.asin(number);
                        break;
                    case 'acos':
                        result = Math.acos(number);
                        break;
                    case 'atan':
                        result = Math.atan(number);
                        break;
                    case 'ln':
                        result = Math.log(number);
                        break;
                    case 'log':
                        result = Math.log10(number);
                        break;
                    case 'sqrt':
                        result = Math.sqrt(number);
                        break;
                    case 'pow2':
                        result = Math.pow(number, 2);
                        break;
                    case 'pow3':
                        result = Math.pow(number, 3);
                        break;
                    case 'factorial':
                        if (number < 0 || number !== Math.floor(number)) {
                            throw new Error('Invalid factorial');
                        }
                        result = factorial(number);
                        break;
                    case 'inverse':
                        if (number === 0) {
                            throw new Error('Division by zero');
                        }
                        result = 1 / number;
                        break;
                    case 'abs':
                        result = Math.abs(number);
                        break;
                    case 'powxy':
                        appendToDisplay('^');
                        return;
                }
                
                if (isNaN(result) || !isFinite(result)) {
                    throw new Error('Invalid calculation');
                }
                
                display.value = result;
                currentInput = result.toString();
                shouldResetDisplay = true;
                display.classList.remove('error');
                
            } catch (error) {
                display.value = 'Error';
                display.classList.add('error');
                currentInput = '';
                shouldResetDisplay = true;
            }
        }

        function factorial(n) {
            if (n === 0 || n === 1) return 1;
            let result = 1;
            for (let i = 2; i <= n; i++) {
                result *= i;
            }
            return result;
        }

        // Keyboard support
        document.addEventListener('keydown', function(event) {
            const key = event.key;
            
            if (key >= '0' && key <= '9') {
                appendToDisplay(key);
            } else if (key === '.') {
                appendToDisplay('.');
            } else if (key === '+') {
                appendToDisplay('+');
            } else if (key === '-') {
                appendToDisplay('-');
            } else if (key === '*') {
                appendToDisplay('*');
            } else if (key === '/') {
                event.preventDefault();
                appendToDisplay('/');
            } else if (key === 'Enter' || key === '=') {
                event.preventDefault();
                calculate();
            } else if (key === 'Escape') {
                clearAll();
            } else if (key === 'Backspace') {
                clearEntry();
            } else if (key === '(' || key === ')') {
                appendToDisplay(key);
            } else if (key === '%') {
                appendToDisplay('%');
            }
        });
    </script>
</body>
</html>